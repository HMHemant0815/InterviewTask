@model IEnumerable<PracticalTask1.ViewProductDTO>

@{
    ViewData["Title"] = "ViewProduct";
    string userRole = Context.Session.GetString("UserRole");
}
<h1>View Product</h1>

<div class="mt-2" >
    <div class="row">
         @if (userRole == "Admin")
                        {
        <div class="col-md-4">
            <a href="/Product/CreateProduct" class="btn btn-primary">Add Product</a>
        </div>
                        }
        <table class="table table-responsive table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Description</th>
                    <th>Category</th>

                    <th>Action</th>
                </tr>

                @foreach (var Product in Model)
                {
                    <tr>
                        <td>
                            @Product.productName 
                        </td>
                        <td>
                            @Product.price
                        </td>
                        <td>
                            @Product.description
                        </td>
                        <td>
                            @Product.categoryName
                        </td>

                        <td>
                            <a class="" href="/Product/EditProduct?id=@Product.productId"> &#9998;</a>
                            <a class="" href="/Product/DeleteProduct?id=@Product.productId" onclick="return confirm('Are you sure you want to delete this product?')">&#128465;</a>

                        </td>
                    </tr>
                }
            </thead>
        </table>
        @if (TempData["msg"] != null)
        {
            <div class="mb-3">
                @TempData["msg"]
            </div>
        }
    </div>

</div>

