@model IEnumerable<PracticalTask1.CategoryModel>

@{
    ViewData["Title"] = "ViewCategory";
    string userRole = Context.Session.GetString("UserRole");
}

<h1>View Category</h1>

<div class="mt-2" style="width:50%">
    <div class="row">
            @if (userRole == "Admin")
                   {
        <div class="col-md-4">
            <a href="/Category/CreateCategory" class="btn btn-primary">Add Category</a>
        </div>
                   }
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    
                    <th>Action</th>
                </tr>

                @foreach (var category in Model)
                {
                    <tr>
                        <td>
                            @category.categoryName
                        </td>
                       
                        <td>
                            <a class="" href="/Category/EditCategory?id=@category.categoryId">&#9998;</a>
                            <a class="" href="/Category/DeleteCategory?id=@category.categoryId" onclick="return confirm('Are you sure you want to delete this Category?')">&#128465;</a>
                        </td>
                    </tr>
                }
            </thead>
        </table>
        @if (TempData["msg"] != null)
        {
            <div class="mb-3">
                @TempData["msg"]
            </div>
        }
    </div>

</div>

