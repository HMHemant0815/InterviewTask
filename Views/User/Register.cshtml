@model PracticalTask1.UserModel
@{
    ViewData["Title"] = "User Registration";
}
<style>
    body {
        background-color: #f8f9fa; /* Set background color as needed */
    }

    .container {
        max-width: 400px; /* Adjust the maximum width of the container based on your design */
        margin-top: 50px; /* Add top margin for spacing */
    }

    .form-group {
        margin-bottom: 15px; /* Add bottom margin for spacing between form groups */
    }

    /* Customize further based on your design needs */
</style>

<div class="container">
    <h2 class="text-center">Registration Form</h2>

    <form asp-action="Register">
        @* Add validation summary to display errors *@
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Fullname">Full Name:</label>
            <input asp-for="Fullname" class="form-control" />
            <span asp-validation-for="Fullname" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Username">Username:</label>
            <input asp-for="Username" class="form-control" />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Password">Password:</label>
            <input asp-for="Password" type="password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Role Type:</label><br />
            <label>
                <input type="radio" asp-for="RoleType" value="Admin" /> Admin
            </label>
            <label>
                <input type="radio" asp-for="RoleType" value="User" /> User
            </label>
            <span asp-validation-for="RoleType" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary btn-block">Register</button>
    </form>

        <script>
            if ('@TempData["msg"]' != '')
                alert('@TempData["msg"]');
        </script>
</div>
