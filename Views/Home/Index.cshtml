@{
    ViewData["Title"] = "Home Page";
}
@model List<DashboardDetail>

<h2>User Information</h2>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@($"{user.Name}")</td>
                <td>@user.Email</td>
                <td>
                    <a href="#" onclick="viewDetails(@user.Id)">View Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    function viewDetails(userId) {
        // Implement logic to open a new popup tab with detailed user information
        window.open('/Home/Details/' + userId, '_blank');
    }
</script>

<script>
    if ('@TempData["msg"]' != '')
        alert('@TempData["msg"]');
</script>